{
  "name": "rebase-downstream-branches",
  "version": "1.0.5",
  "description": "Automatically discover and rebase all downstream branches in a stacked PR chain using GitHub CLI",
  "type": "commonjs",
  "main": "bin/rebase-downstream-branches.js",
  "bin": {
    "rebase-downstream-branches": "bin/rebase-downstream-branches.js"
  },
  "files": [
    "bin"
  ],
  "scripts": {
    "start": "node bin/rebase-downstream-branches.js",
    "test": "node --test",
    "test:help": "node bin/rebase-downstream-branches.js --help",
    "test:version": "node bin/rebase-downstream-branches.js --version",
    "lint": "eslint bin/**/*.js",
    "lint:fix": "eslint bin/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepublishOnly": "npm run lint && npm test"
  },
  "keywords": [
    "git",
    "rebase",
    "stacked-prs",
    "github",
    "pull-request",
    "pr-chain",
    "downstream",
    "branches",
    "cli",
    "automation",
    "github-cli",
    "workflow",
    "devtools"
  ],
  "author": "mkaczkowski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkaczkowski/rebase-downstream-branches.git"
  },
  "bugs": {
    "url": "https://github.com/mkaczkowski/rebase-downstream-branches/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mkaczkowski/rebase-downstream-branches#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.0"
  }
}
